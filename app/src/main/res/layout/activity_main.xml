<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context="com.mugdha.calculatorApp.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/wallpaper"
        android:layout_weight="1"
        android:gravity="center"

        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5pt"
        android:layout_weight="1"
        android:background="#6B6B6D"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:gravity="center|right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:shadowColor="#673AB7"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2pt">

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buClean"
                android:text="AC"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buplusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/busqrt"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buOpEevent"
                android:text="âˆš"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:background="#F79231"
                android:id="@+id/buxtopowerofy"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:onClick="buOpEevent"
                android:text="^"
                android:textColor="#000000"
                android:textSize="20sp" />


                />

            <Button
                android:id="@+id/buPer"
                android:layout_width="30pt"
                android:background="#F79231"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:onClick="buPercent"
                android:text="%"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buOpEevent"
                android:text="/"
                android:textColor="#455A64"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2pt">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buOpEevent"
                android:text="*"
                android:textColor="#455A64"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2pt">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buOpEevent"
                android:text="-"
                android:textColor="#455A64"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2pt">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="#F79231"
                android:onClick="buOpEevent"
                android:text="+"
                android:textColor="#455A64"
                android:textSize="24sp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bu0"
            android:layout_width="157dp"
            android:layout_height="30pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:onClick="buNumberEvent"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/buEq"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="#F79231"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="#455A64"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>